<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mapa.mechame.mechame.CadastroUsuario"
    android:background="@drawable/backgroundapp">

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/txtConfigNomeUsuario"
        android:layout_centerHorizontal="true"

        android:hint="Digite o seu nome"
        android:layout_marginTop="90dp"
        android:maxLength="20"
        android:textColor="#fff7ffd3" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmailUsuario"

        android:hint="Digite o seu e-mail"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="#fff7ffd3" />

    <EditText
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:id="@+id/txtSenhaUsuario"
        android:hint="Digite o sua senha"
        android:password="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:textColor="#fff7ffd3"

 />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastraUsuario"
        android:layout_marginTop="42dp"
        android:background="@drawable/btnprosseguir"
        android:layout_below="@+id/txtSenhaUsuario"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
